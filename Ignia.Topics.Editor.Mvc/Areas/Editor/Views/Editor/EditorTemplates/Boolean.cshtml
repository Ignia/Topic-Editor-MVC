@model AttributeViewModel

@{
  Layout = "~/Areas/Editor/Views/Editor/EditorTemplates/_Layout.cshtml";
}

<div class="form-check form-check-inline">
  <label class="form-check-label">
    @Html.RadioButtonFor(m => m.Value, "1", new { id = "Boolean_" + Model.Key + "_1", name = "Boolean_" + Model.Key, @class = "form-check-input" }) Yes
  </label>
</div>
<div class="form-check form-check-inline">
  <label class="form-check-label">
    @Html.RadioButtonFor(m => m.Value, "0", new { id = "Boolean_" + Model.Key + "_0", name = "Boolean_" + Model.Key, @class = "form-check-input" }) No
  </label>
</div>
