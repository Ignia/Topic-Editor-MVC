@model Ignia.Topics.Editor.Models.EditorViewModel

@{
  ViewBag.Title = "Home Page";
}

<h1>@Model.Topic.Title</h1>

@using (Html.BeginForm()) {

  foreach (var attribute in Model.ContentType.SupportedAttributes.Values) {
    <section id="@attribute.Key" class="attribute @attribute.Key">
      <h2>@attribute.Title</h2>
      <p>@attribute.Description</p>
      <div class="fields">
        @Html.EditorFor(m => attribute, "Html", attribute.Key, Model.Topic)
      </div>
    </section>
  }

  <input type="submit" value="Save" />

}

