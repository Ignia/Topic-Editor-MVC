@model AttributeViewModel<AttributeDescriptorTopicViewModel>

@{
  Layout = "~/Views/Editor/Components/_Layout.cshtml";
}

<div class="form-check form-check-inline @(Model.AttributeDescriptor.CssClass?? "FormField")">
  <label class="form-check-label">
    <input type="radio" asp-for="Value" value="Default" class="form-check-input" disabled=@(!Model.AttributeDescriptor.IsEnabled) required=@Model.AttributeDescriptor.IsRequired /> Default
  </label>
</div>
<div class="form-check form-check-inline @(Model.AttributeDescriptor.CssClass?? "FormField")">
  <label class="form-check-label">
    <input type="radio" asp-for="Value" value="Desktop" class="form-check-input" disabled=@(!Model.AttributeDescriptor.IsEnabled) required=@Model.AttributeDescriptor.IsRequired /> Desktop
  </label>
</div>
<div class="form-check form-check-inline @(Model.AttributeDescriptor.CssClass?? "FormField")">
  <label class="form-check-label">
    <input type="radio" asp-for="Value" value="Mobile" class="form-check-input" disabled=@(!Model.AttributeDescriptor.IsEnabled) required=@Model.AttributeDescriptor.IsRequired /> Mobile
  </label>
</div>
